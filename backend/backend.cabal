executable backend
  main-is:             Main.hs
  default-extensions: OverloadedStrings
                    , LambdaCase
                    , RecordWildCards
                    , ScopedTypeVariables
                    , FlexibleContexts
  other-modules:      TokenValidation
  -- other-extensions:
  build-depends:       base >=4.11 && <4.12
                     , common
                     , bytestring
                     , binary
                     , envy
                     , servant
                     , servant-server
                     , servant-auth
                     , wai
                     , warp
                     , aeson
                     , aeson-casing
                     , postgresql-simple
                     , text
                     , katip
                     , lens
                     , mtl
                     , jose
                     , monad-time
                     , exceptions
  hs-source-dirs:      src
  default-language:    Haskell2010
